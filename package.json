{
  "name": "minicart",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^0.3.6",
    "eslint": "^7.22.0",
    "eslint-config-vtex": "^13.0.0",
    "eslint-config-vtex-react": "^7.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^3.8.3"
  }
}
